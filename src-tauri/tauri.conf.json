{
	"package": {
		"productName": "konachan",
		"version": "1.1.0"
	},
	"build": {
		"distDir": "../src/dist",
		"devPath": "http://localhost:8888",
		"beforeDevCommand": "cd src && trunk serve --features tauri",
    "beforeBuildCommand": "cd src run trunk build --release --features tauri"
	},
	"tauri": {
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "konachan",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
			],
			"resources": [],
			"externalBin": [],
			"copyright": "",
			"category": "Photography",
			"shortDescription": "",
			"longDescription": "",
			"deb": {
				"depends": []
			},
			"macOS": {
				"frameworks": [],
				"minimumSystemVersion": "",
				"exceptionDomain": "",
				"signingIdentity": null,
				"entitlements": null
			},
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"updater": {
			"active": false
		},
		"allowlist": {
			"all": true
		},
		"windows": [
			{
				"title": "konachan",
				"width": 1000,
				"height": 800,
				"resizable": true,
				"fullscreen": false,
				"visible": false
			},
			{
				"width": 150,
				"height": 150,
				"decorations": false,
        "transparent": true,
				"url": "splashscreen.html",
				"label": "splashscreen"
			}
		],
		"security": {
			"dangerousDisableAssetCspModification": true
		},
    "macOSPrivateApi": true
	}
}
